
<section class="cover imagebg text-center height-100" data-overlay="8">
    <div class="background-image-holder"> <%= image_tag "img/education-3.jpg" %> </div>
    <div class="container pos-vertical-center">
        <div class="row">
            <div class="col-md-8">
                <h1> <%= @webinars.title %> </h1><hr>
                <span>by: <%= @webinars.speaker.name %> <%if @webinars.speaker.category == "admin" %><i class="fa fa-check-circle" title="Admin"></i> <%end%> | <%= @webinars.date.strftime("%d %b %Y, Pukul %H:%M ") %> </span>
                <hr>
                <div class="lead"><% if @webinars.content.present? %> <%= @webinars.content.html_safe %> <% end %></div>
                <div class="modal-instance block">
                    <div class="video-play-icon video-play-icon--sm modal-trigger"></div> <span><strong>See Webinars</strong>&nbsp;  </span>
                    <% if @webinars.video.present? %>
                    <div class="modal-container">
                        <div class="modal-content bg-dark" data-width="60%" data-height="60%"> <iframe data-src="https://www.youtube.com/embed/6p45ooZOOPo?autoplay=1" allowfullscreen="allowfullscreen"></iframe> </div>
                    </div>
                    <% elsif @webinars.link.present? %>
                      <% link_to @webinar.link %>
                    <% else %>
                    <div class="modal-container">
                        <div class="modal-content bg-light" data-width="60%" data-height="60%"> <h4>Belum Ada Informasi</h4> </div>
                    </div>
                    <% end %>
                </div>

            </div>
        </div>
    </div>
</section>
