            </section>
            <section class="space--xxs">
                <div class="container">
                    <div class="row text-block">
                        <div class="col-md-12">
                            <h3>More recent stories</h3>
                        </div>
                    </div>
                    <div class="row">
                      <%	 @stories.each do |w| %>
                        <div class="col-md-4">
                            <article class="feature feature-1">
                              <%= link_to story_path(w), class: "block" do %>
                                <%= image_tag w.image %>
                              <% end %>
                                <div class="feature__body boxed boxed--border"> <em> Speaker: <%= w.speaker.name.titleize %></em>
                                    <h5><%= w.title.titleize %></h5>
                                    <%= link_to "Read More", story_path(w) %>
                                </div>
                            </article>
                        </div>
                        <%	 end %>
                    </div>
                </div>
            </section>
            <section class="bg--secondary space--xs">
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <h4>Featured Speaker</h4>
                        </div>
                        <div class="col-6 text-right"> <a href="#">View more</a> </div>
                    </div>
                    <div class="row">
                      <% @speaker.each do |p| %>
                        <div class="col-md-3 col-6">
                            <a href="#" class="feature"> <%= image_tag p.image %>
                                <h5 class="mb--0"> <%= p.name %></h5>
                                <div><%= p.job.titleize %></div>
                            </a>
                        </div>
                        <% end %>
                    </div>
                </div>
            </section>
