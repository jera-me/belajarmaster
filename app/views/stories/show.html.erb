<%= render 'layouts/navbar' %>
            <section class="switchable space--xxs switchable--switch">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="height-50 imagebg border--round" data-overlay="8">
                                <div class="background-image-holder"><%= image_tag @stories.image %></div>
                                <div class="pos-vertical-center col-md-9 boxed boxed--lg bg--none">
                                    <h1><%= @stories.title.titleize %></h1>
                                    <p class="lead"> <%= @stories.quote%> </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="space--xxs ">
                <div class="container">
                    <div class="row justify-content-between">
                        <div class="col-md-9 boxed--border border--round bg--secondary border--round box-shadow-wide">
                          <%= @stories.content.html_safe %>
                          <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                          <ins class="adsbygoogle"
                               style="display:block"
                               data-ad-format="fluid"
                               data-ad-layout-key="-6t+ed+2i-1n-4w"
                               data-ad-client="ca-pub-4268093070731551"
                               data-ad-slot="9871770800"></ins>
                          <script>
                               (adsbygoogle = window.adsbygoogle || []).push({});
                          </script>
                          <hr/>
                          <div class="card boxed--border bg--secondary">
                                <div class="row ">
                                  <div class="col-md-4">
                                      <%= image_tag @speaker.image, class: "w-100" %>
                                    </div>
                                    <div class="col-md-8 px-3">
                                      <div class="card-block boxed bg--secondary px-3">
                                        <div class="card-title">
                                          <strong><%= @speaker.name.titleize %>,  </strong>
                                          <em><%= @speaker.job.titleize %> <%if @speaker.category == "admin" %><i class="fa fa-check-circle" title="Admin"></i> <%end%> </em>
                                        </div>
                                        <div class="card-text">
                                          <% if @speaker.content %>
                                            <%= @speaker.content.html_safe %>
                                          <% end %>
                                          <ul class="social-list list-inline list--hover">
                                              <li class="list-inline-item">
                                                  <%= link_to @speaker.link_cv, class: "btn btn--sm btn--primary type--uppercase" do %>
                                                    <span class="btn__text">
                                                    Download CV
                                                    </span>
                                                  <% end %>
                                              </li>

                                              <% if @speaker.facebook.present? %>
                                              <li class="list-inline-item">
                                                  <%= link_to @speaker.facebook do %>
                                                    <i class="socicon socicon-facebook icon icon--xs">
                                                    </i>
                                                  <% end %>
                                              </li>
                                              <% end %>

                                              <% if @speaker.twitter.present? %>
                                              <li class="list-inline-item">
                                                  <%= link_to @speaker.twitter do %>
                                                    <i class="socicon socicon-twitter icon icon--xs">
                                                    </i>
                                                  <% end %>
                                              </li>
                                              <% end %>

                                              <% if @speaker.instagram.present? %>
                                              <li class="list-inline-item">
                                                  <%= link_to @speaker.instagram do %>
                                                    <i class="socicon socicon-instagram icon icon--xs">
                                                    </i>
                                                  <% end %>
                                              </li>
                                              <% end %>

                                              <% if @speaker.linkedin.present? %>
                                              <li class="list-inline-item">
                                                  <%= link_to @speaker.linkedin do %>
                                                    <i class="socicon socicon-linkedin icon icon--xs">
                                                    </i>
                                                  <% end %>
                                              </li>
                                              <% end %>

                                              <% if @speaker.email.present? %>
                                              <li class="list-inline-item">
                                                  <%= mail_to @speaker.email do %>
                                                    <i class="socicon socicon-mail icon icon--xs">
                                                    </i>
                                                  <% end %>
                                              </li>
                                              <% end %>

                                              <% if @speaker.website.present? %>
                                              <li class="list-inline-item">
                                                  <%= link_to @speaker.website do %>
                                                    <i class="socicon socicon-rss icon icon--xs">
                                                    </i>
                                                  <% end %>
                                              </li>
                                              <% end %>

                                          </ul>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div><hr/>



